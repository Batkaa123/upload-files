<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/download"
        android:layout_width="118dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:background="@android:color/holo_green_light"
        android:text="Файлыг татах"
        android:textColor="#fff" />

    <ProgressBar
        android:background="#fff"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progress"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/upload_file"
        android:layout_width="116dp"
        android:layout_height="66dp"
        android:layout_below="@id/download"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="-64dp"
        android:layout_marginEnd="283dp"
        android:layout_marginRight="283dp"
        android:background="@color/colorPrimary"
        android:text="ФАЙЛ СОНГОХ"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/filename"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_below="@id/upload_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="116dp"
        android:layout_height="65dp"
        android:layout_below="@+id/filename"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="284dp"
        android:layout_marginLeft="284dp"
        android:layout_marginTop="-104dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Файл байршуулах"
        android:textColor="#fff" />

    <Button
        android:id="@+id/advanceupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:text="Урьдчилан байршуулах"
        android:textColor="#fff" />
</RelativeLayout>